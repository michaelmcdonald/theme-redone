{
  "block_meta": {
    "BLOCK_REGISTER_NAME": "main-cta",
    "BLOCK_TITLE": "Main Cta",
    "keywords": ["cta", "link"],
    "hasSidebar": false,
    "hasExample": true,
    "hasGlobalSettings": false,
    "grid": "2"
  },

  "attributes": {
    "title": {
      "type": "object",
      "field_meta": {
        "type": "text",
        "variation": "short",
        "label": "Title",
        "help": "This is a title",
        "max_chars": 30,
        "col": "1"
      },
      "default": {
        "text": ""
      }
    },

    "text": {
      "type": "object",
      "field_meta": {
        "type": "text",
        "variation": "long",
        "label": "Content",
        "col": "2"
      },
      "default": {
        "text": ""
      }
    },

    "cta": {
      "type": "object",
      "field_meta": {
        "type": "cta",
        "label": "Button",
        "help": "cta help text",
        "col": "after"
      },
      "default": {
        "title": "",
        "url": "",
        "target": false
      }
    },

    "number": {
      "type": "object",
      "field_meta": {
        "type": "number",
        "label": "Number of Something",
        "help": "This is a Number Field",
        "min": 0,
        "max": 30,
        "step": 2,
        "col": "after"
      },
      "default": {
        "value": 20
      }
    },

    "content": {
      "type": "object",
      "field_meta": {
        "type": "freeform",
        "label": "freeform editor",
        "help": "This is a content field",
        "max_chars": 2000,
        "col": "after"
      },
      "default": {
        "text": ""
      }
    },

    "checkbox_test": {
      "type": "object",
      "field_meta": {
        "type": "checkbox",
        "label": "Checkbox",
        "help": "Checkbox help",
        "col": "after"
      },
      "default": {
        "checked": false
      }
    },

    "toggle_test": {
      "type": "object",
      "field_meta": {
        "type": "toggle",
        "label": "Toggle",
        "help": "Toggle help",
        "col": "after"
      },
      "default": {
        "checked": true
      }
    },

    "range_test": {
      "type": "object",
      "field_meta": {
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 10,
        "label": "Range",
        "help": "Range field help text",
        "col": "after"
      },
      "default": {
        "value": 70
      }
    },

    "bg_color": {
      "type": "object",
      "field_meta": {
        "type": "color",
        "customColors": true,
        "options": [
          { "name": "red", "color": "#f00" },
          { "name": "blue", "color": "#00f" },
          { "name": "white", "color": "#fff" }
        ],
        "label": "Background Color",
        "help": "Color Picker Helper",
        "col": "after"
      },
      "default": {
        "value": "#f00"
      }
    },

    "select_control": {
      "type": "object",
      "field_meta": {
        "type": "select",
        "options": [
          { "label": "Orange", "value": "orange" },
          { "label": "Red", "value": "red" },
          { "label": "Green", "value": "green" },
          { "label": "Blue", "value": "blue" }
        ],
        "label": "Toggle Gradient",
        "help": "Select Control Help text",
        "col": "after"
      },
      "default": {
        "value": "orange"
      }
    },

    "post": {
      "type": "object",
      "field_meta": {
        "type": "object_selector",
        "objects": ["posts"],
        "object_type": "post",
        "placeholder": "Search for a post",
        "label": "Post",
        "help": "Object selector help text",
        "selected_post_label": "Selected Post",
        "col": "after"
      },
      "default": {
        "id": null,
        "title": ""
      }
    }
  }
}
